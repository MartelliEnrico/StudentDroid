<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.martelli.enrico.studentdroid.MateriaActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/materia_nome_label"
        android:text="Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/materia_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/materia_nome_label" />

    <TextView
        android:id="@+id/materia_nome_professore_label"
        android:text="Professor Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/materia_nome_label" />

    <TextView
        android:id="@+id/materia_nome_professore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/materia_nome_professore_label"
        android:layout_below="@id/materia_nome_label" />

</RelativeLayout>
